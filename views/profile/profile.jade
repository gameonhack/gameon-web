extends ../layout

block content
  
  section(class="card center")
    img(height="220px" class="cover" src="/images/rectangle.png")
    
    div(class="crop-square whiteBorder n-t-7 n-b-7 circle-border")
      img(class="" src=userView.get("image")._url )

    h1(class="center nm-t-4")= userView.get("name")
    p(class="small") gameonhack.com/
     b=userView.get("username")
    
  section(class="card")
    
    <div id="widget" style="display: inline-block; overflow: hidden; text-align: left; white-space: nowrap;"><a onclick="openURL('http://www.facebook.com/#{userView.get("facebookId")}')" style="min-width: 90px;border-radius: 6px;-webkit-border-radius: 6px;-moz-border-radius: 6px;border: 1px solid #d5d5d5;padding: 6px 6px 6px 0;text-decoration: none; text-shadow: none;margin: 0;display: block;color: #575757;line-height: 24px;font-size: 14px;font-weight: normal;padding-left: 36px; background: url('https://assets.modernapp.co/assets/images/facebook-message-button-icon2x.png') no-repeat 5px 6px;background-color: #fff !important; background-size: 23px 23px;">Contact Me</a></div><script async defer src="https://assets.modernapp.co/assets/js/embed.js"></script>
    
    if isCurrent

      a(href="/logout" class="floatRight")
        button(type="button", class="border")
          i(class="fa fa-sign-out" aria-hidden="true")
          span Logout 
      
      a(href="/profile/edit" class="floatRight")
        button(type="button", class="border")
          i(class="fa fa-ellipsis-h" aria-hidden="true")
          span Edit
          
