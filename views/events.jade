extends layout

block content
  
  each event in events
    section(class="card")
      div
        h1 #{event.get("title")}
      div
        div(class = "col-8")
          p(class="small")
            +printDate( event.get('date') )
          p #{event.get("caption")}
        div(class = "col-2 centerhorizontal")
          if event.get("icon")
            a(href='/events/#{event.get("slug")}')
              img(src=event.get("icon")._url width="100" height="auto")
      a(class = 'blue' href='/events/#{event.get("slug")}' ) Más información
  
  if events.length == 0 
    section(class="card")
      img(class= "cover", src="/images/message.jpg")
      h1 Stay tuned for new events
      p We haven't found events in your near area.
