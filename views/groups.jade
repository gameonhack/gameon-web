extends layout

block content

  h1= title
  ul
  each group in groups
    section(class="card")
      div(class="col-2")
          img(src=group.get("icon")._url width="150" height="auto")
      div(class="col-7 col-m-1")
        h1 #{group.get("name")}
        p #{group.get("bio")}    
    div(class="col-10")   
      div(class="col-7")
      div(class="col-3")
        button(class="viewdetails") REQUEST JOIN
        button(class="viewdetails") FOLLOW
            
  if groups.length == 0 
    section(class="card")
      img(class= "cover", src="/images/message.jpg")
      h1 Create a Group
      p Group creation should be available soon.
