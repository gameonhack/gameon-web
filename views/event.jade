extends layout

block content
  
  h1 #{event.get("title")}
  
  section(class="card")
    img(class="cover", src=event.get("icon")._url)    
    p #{event.get("caption")}
      
    
  section(class="card")
    h1 Schedules
    if schedules.length > 0
      p(class="small") 
        script printDate("#{event.get('date')}" )
      each schedule in schedules
        h2=  schedule.get("name")
    else 
      p No events :(
      
